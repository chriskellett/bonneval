          <a href="/pages/our-origin" id="Our-Origins-Link" class="nav__link cc--margin-right page-fade w-nav-link">{{ 'index.A_3' | t }}</a>
          <a href="/pages/founders" id="Our-Founders-Link" class="nav__link page-fade w-nav-link">{{ 'index.A_4' | t }}</a>
        </div>
        <a href="/" data-w-id="05f750c8-e348-3d8a-84a2-a49d222a5672" aria-current="page" class="nav__ligo-link w-nav-brand"><img src="{{ 'Bonneval-Logo-Charcoal.svg' | asset_url }}" loading="lazy" id="Return-To-Hompage-Link" alt="Bonneval Logo Click to return to the homepage"></a>
        <div class="nav__menu-buttons cc--mobile-bottom">
          <div class="nav__link-spacer"></div>
          <a href="/pages/sustainability" id="Sustainability-Link" class="nav__link cc--margin-left w-nav-link">{{ 'index.A_5' | t }}</a>
          <a href="/pages/find-us" id="Find-Us-Link" class="nav__link cc--margin-left page-fade w-nav-link">{{ 'index.A_6' | t }}</a>
        </div>
        <a href="#" class="nav__mobile-close-button w-inline-block">
          <div class="nav__mobile-close-button__line"></div>
