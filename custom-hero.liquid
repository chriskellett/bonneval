{%- for block in section.blocks -%}
  {%- unless block.settings.target_page == page.handle -%}
    {% continue %}
  {%- endunless -%}

  {%- assign main = block.settings -%}

  {%- capture nav_color -%}
	{{- main.toggle_nav -}}
  {%- endcapture -%}

  {%- capture hero -%}
	{%- if main.hero_image -%}
	    {{- main.hero_image | img_url: 'master' -}}
	{%- endif -%}
  {%- endcapture -%}
  {%- capture description_text -%}
    {{- main.page_description -}}
  {%- endcapture -%}
  
  {%- assign main = nil -%}
{%- endfor -%}

{%- if nav_color == "true" -%}
<!-- Black nav here	 -->
    <div data-animation="over-left" class="nav w-nav" data-easing="ease-in-out" data-collapse="medium" data-w-id="05f750c8-e348-3d8a-84a2-a49d222a5669" role="banner" data-no-scroll="1" data-duration="400" data-doc-height="1">
    <header class="nav__decor-parent">
      <div class="nav__decor-wrap"><img src="{{ 'Flower-Decor-Icon.svg' | asset_url }}" loading="lazy" width="15" alt="Small flower icon content separator" class="nav__flower-icon">
        <div class="nav__decore__line"></div><img src="{{ 'Flower-Decor-Icon.svg' | asset_url }}" loading="lazy" width="15" alt="Small flower icon content separator" class="nav__flower-icon">
      </div>
    </header>
    <div class="nav__bg"></div>
    <div id="Main-Navigation" class="nav__container w-container">
